# Production Environment - Korea (KR)
# AWS Seoul Region (PIPA compliant - no data transfer abroad)

ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database (AWS RDS - Seoul)
# Use AWS Secrets Manager in production
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:5432/${DB_NAME}?ssl=require

# Redis (AWS ElastiCache)
REDIS_URL=rediss://${REDIS_HOST}:6379

# Security
# Retrieve from AWS Secrets Manager
SECRET_KEY=${SECRET_KEY_FROM_SECRETS_MANAGER}
DB_ENCRYPTION_KEY=${ENCRYPTION_KEY_FROM_KMS}

# CORS (production domain only)
CORS_ORIGINS=https://qi.hospital.co.kr

# File storage (S3 or local)
UPLOAD_DIR=s3://patient-safety-uploads-kr
MAX_UPLOAD_SIZE=10485760

# Compliance
PIPA_COMPLIANCE=true
HIPAA_COMPLIANCE=false
MFDS_COMPLIANCE=false

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel-collector.hospital.co.kr
