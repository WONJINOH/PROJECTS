# Development Environment - Korea (KR)
# Local development settings

ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database (local Docker)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/patient_safety
REDIS_URL=redis://localhost:6379

# Security (development only - change in production!)
SECRET_KEY=dev-secret-key-not-for-production
DB_ENCRYPTION_KEY=dev-encryption-key-32-chars!!

# CORS (allow localhost)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# Feature flags
PIPA_COMPLIANCE=true
HIPAA_COMPLIANCE=false
MFDS_COMPLIANCE=false
